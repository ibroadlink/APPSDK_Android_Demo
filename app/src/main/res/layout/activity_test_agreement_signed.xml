<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.broadlink.blappsdkdemo.activity.device.DevGatewayManageActivity"
    android:padding="10dp">

<LinearLayout
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp">

    <EditText
        android:id="@+id/et_platform_id"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textDark"
        android:hint="Platform id"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:background="@drawable/shape_input_view_blue_bg"/>
    
    <EditText
        android:id="@+id/et_result"
        android:padding="10dp"
        android:textSize="13sp"
        android:gravity="top|left"
        android:layout_width="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:textColor="@color/textDark"
        android:background="@drawable/shape_input_view_blue_bg"
        android:scrollbars="vertical"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/bt_scan_start"
        style="@style/commonBtn"
        android:text="Go"/>
</LinearLayout>
</ScrollView>